<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="600.0" prefWidth="800.0" spacing="30.0" style="-fx-padding: 30" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.banco.controlador.PanelClienteControlador">

    <Label text="Panel principal de administración">
        <font>
            <Font size="18.0" />
        </font>
    </Label>
   <Label prefHeight="17.0" prefWidth="339.0" text="Carlos bienvenido a su banco, aqui podra ver sus transacciones " />


    <TableView fx:id="tablaTransacciones" layoutX="430.0" layoutY="30.0" prefHeight="310.0" prefWidth="540.0">
        <columns>
            <TableColumn fx:id="colTipo" prefWidth="${tablaTransacciones.width*0.2}" text="Tipo" />
            <TableColumn fx:id="colFecha" prefWidth="${tablaTransacciones.width*0.2}" text="Fecha" />
            <TableColumn fx:id="colValor" prefWidth="${tablaTransacciones.width*0.2}" text="Valor" />
            <TableColumn fx:id="colUusario" prefWidth="${tablaTransacciones.width*0.2}" text="Usuario" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

    <HBox alignment="BOTTOM_LEFT" spacing="20.0">
        <Button minHeight="40.0" minWidth="130.0" style="-fx-background-color: #00807a; -fx-text-fill: white" text="Cerrar sesión" onAction="#cerrarPanelCliente" />
        <Button minHeight="40.0" minWidth="130.0" style="-fx-background-color: #00807a; -fx-text-fill: white" text="Consultar" onAction="#consultarSaldo" />
        <Button minHeight="40.0" minWidth="130.0" onAction="#irPanelTransferencia" style="-fx-background-color: #00807a; -fx-text-fill: white" text="Transferir" />
    </HBox>
</VBox>
